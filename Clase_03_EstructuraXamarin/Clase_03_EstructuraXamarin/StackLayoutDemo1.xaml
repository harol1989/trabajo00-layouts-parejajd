<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Clase_03_EstructuraXamarin.StackLayoutDemo1"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout Margin="5,10,5,0" Orientation="Vertical">
            <Label
                HorizontalOptions="StartAndExpand"
                Text="Nombres"
                VerticalOptions="Start" />
            <Entry HorizontalOptions="FillAndExpand" VerticalOptions="Start" />

            <Label
                HorizontalOptions="StartAndExpand"
                Text="Apellidos"
                VerticalOptions="Start" />
            <Entry HorizontalOptions="FillAndExpand" VerticalOptions="Start" />

            <Button
                HorizontalOptions="FillAndExpand"
                Text="Button"
                VerticalOptions="EndAndExpand" />
        </StackLayout>

    </ContentPage.Content>
</ContentPage>